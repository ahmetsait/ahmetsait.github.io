{
	"compilerOptions": {
		"allowJs": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"checkJs": false,
		"composite": true,
		"incremental": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "js",
		"rootDir": "ts",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES6",
	},
	"include": [
		"ts/**/*",
	],
}
