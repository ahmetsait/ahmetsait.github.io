---
layout:
---
{
	"$schema": "https://json.schemastore.org/web-manifest-combined.json",
	"name": "{{ site.title }}",
	"short_name": "{{ site.title }}",
	"start_url": "{{ site.data.langs[page.lang].blog.index | relative_url }}",
	"display": "browser",
	"background_color": "#ffffff",
	"theme_color": "#ffffff",
	"description": "{{ site.data.langs[page.lang].blog.description }}",
	"icons": [
		{
			"src": "/assets/icon-192.png",
			"sizes": "192x192",
			"type": "image/png"
		},
		{
			"src": "/assets/icon-512.png",
			"sizes": "512x512",
			"type": "image/png"
		},
		{
			"src": "/assets/icon.svg",
			"sizes": "any",
			"type": "image/svg+xml"
		}
	]
}
